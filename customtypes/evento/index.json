{
  "format": "page",
  "id": "evento",
  "label": "Evento",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "imagem_ilustrativa": {
        "type": "Image",
        "config": {
          "label": "Imagem ilustrativa",
          "constraint": {},
          "thumbnails": [
            {
              "name": "Tela larga",
              "width": 552,
              "height": 150
            },
            {
              "name": "Tela estreita",
              "width": 328,
              "height": 100
            },
            {
              "name": "Banner",
              "width": 1128,
              "height": 140
            }
          ]
        }
      },
      "nome_do_evento": {
        "type": "StructuredText",
        "config": {
          "label": "Nome do evento",
          "placeholder": "ex: Alta Administração e Governança das Contratações: Responsabilidade e Desafio dos Gestores",
          "allowTargetBlank": false,
          "single": "strong,em"
        }
      },
      "valor_do_evento": {
        "type": "Text",
        "config": {
          "label": "Valor do evento (curto)",
          "placeholder": "ex: R$3.780,00"
        }
      },
      "conteudo": {
        "type": "StructuredText",
        "config": {
          "label": "Conteúdo",
          "placeholder": "Descrição do conteúdo do curso",
          "allowTargetBlank": true,
          "multi": "paragraph,heading3,heading4,strong,em,hyperlink,image,list-item,o-list-item"
        }
      },
      "instrutor_curto": {
        "type": "Text",
        "config": {
          "label": "Instrutor (curto)",
          "placeholder": "Caso haja apenas um instrutor, preencher este campo"
        }
      },
      "instrutores_longo": {
        "type": "StructuredText",
        "config": {
          "label": "Instrutores (longo)",
          "placeholder": "Preencher com os instrutores e suas credenciais",
          "allowTargetBlank": true,
          "multi": "paragraph,strong,em,hyperlink"
        }
      },
      "publico_alvo": {
        "type": "StructuredText",
        "config": {
          "label": "Público alvo",
          "placeholder": "Descrição do público alvo do evento",
          "allowTargetBlank": false,
          "single": "strong,em"
        }
      },
      "carga_horaria": {
        "type": "Text",
        "config": {
          "label": "Carga horária",
          "placeholder": "ex: 4h"
        }
      },
      "horario": {
        "type": "Text",
        "config": {
          "label": "Horário",
          "placeholder": "ex: 08h às 16h"
        }
      },
      "data_do_evento": {
        "type": "Date",
        "config": {
          "label": "Data do evento",
          "placeholder": "ex: 08/06/24"
        }
      },
      "geolocalizacao": {
        "type": "GeoPoint",
        "config": {
          "label": "Geolocalização"
        }
      },
      "link_do_evento": {
        "type": "Link",
        "config": {
          "label": "Link do evento",
          "placeholder": "",
          "select": null
        }
      },
      "local_do_evento_curto": {
        "type": "Text",
        "config": {
          "label": "Local do evento (curto)",
          "placeholder": "ex: Quixadá, CE"
        }
      },
      "local_do_evento_longo": {
        "type": "StructuredText",
        "config": {
          "label": "Local do evento (longo)",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,strong,em"
        }
      },
      "valor_do_evento_longo": {
        "type": "StructuredText",
        "config": {
          "label": "Valor do evento (longo)",
          "placeholder": "ex: até 2 pessoas R$500. 3 a 5 pessoas...",
          "allowTargetBlank": true,
          "multi": "paragraph,strong,em"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "call_to_action": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": ""
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": ""
        }
      },
      "meta_image": {
        "type": "Image",
        "config": {
          "label": "Meta Image",
          "constraint": {},
          "thumbnails": []
        }
      }
    }
  }
}
